<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.achirafernando.coursework01.LevelChooser"
    android:orientation="vertical"
    android:background="#8f7a85">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please choose a level to continue"
        android:id="@+id/textViewLevel"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Novice"
        android:id="@+id/buttonNovice"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:onClick="noviceClick"
        android:background="#b19393"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:id="@+id/buttonEasy"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:onClick="easyClick"
        android:background="#b19393"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:id="@+id/buttonMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:onClick="mediumClick"
        android:background="#b19393"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Guru"
        android:id="@+id/buttonGuru"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:onClick="guruClick"
        android:background="#b19393"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle to activate hints       "
        android:id="@+id/hintSwitch"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:checked="false"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/status"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
