<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.achirafernando.coursework01">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="Math Game">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelChooser"
            android:label="Level Chooser" />
        <activity
            android:name=".GameWindow"
            android:label="Game Window" />
        <activity
            android:name=".AboutGame"
            android:label="Game Rules" />
        <activity
            android:name=".TotalGameScore"
            android:label="Your Game Score"></activity>
    </application>

</manifest>
